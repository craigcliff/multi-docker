{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "craigcliff/multi-client",
            "hostname": "client",
            "essential": "false"
        },
        {
            "name": "server",
            "image": "craigcliff/multi-server",
            "hostname": "api",
            "essential": "false"
        },
        {
            "name": "worker",
            "image": "craigcliff/multi-worker",
            "hostname": "worker",
            "essential": "false"
        },
        {
            "name": "nginx",
            "image": "craigcliff/multi-nginx",
            "hostname": "nginx",
            "essential": "true",
            "portMappings": [{
                "hostPort": 80,
                "containerPort": 80
            }],
            "links" : ["client", "server"]
        }
    ]
}